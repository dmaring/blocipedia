<div class="container">
  <div class="row justify-content-sm-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3>My Wikis</h3>
        </div>
        <div class="card-body">
        <table class="table table-hover table-bordered">
          <tbody>
            <% @wikis.each do |wiki| %>
            <tr>
              <td colspan="2"><%= link_to wiki.title, wiki_path(wiki.id) %>
                <% if wiki.private == true %>
                    <%= image_tag "icons/lock-locked-2x.png" %>
                <% end %>
              </td>
              <td><%= link_to "Edit", edit_wiki_path(wiki.id), class: "card-link" %></td>
              <td><%= link_to "Delete", wiki, method: :delete, class: "card-link", data: { confirm: 'Are you sure you want to delete this Wiki?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <div class="col-md-1">
      <%= link_to "New Wiki", new_wiki_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
