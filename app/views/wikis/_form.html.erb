<div class="card-body">
  <div class="form-group">
  <%= form_for @wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control", rows: "14", autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= f.check_box :private, disabled: !premium_user? %>
      <%= f.label :private %>
    </div>

    <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
  <% end %>
  </div>
</div>
