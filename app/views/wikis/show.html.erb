<div class="container">
  <div class="row justify-content-sm-center">
    <div class="col-md-8">
      <div class="card" style="height: 600px">
        <div class="card-header">
          <h3><%= @wiki.title %></h3>
        </div>
        <div class="card-body">
          <p><%= @wiki.body %></p>
        </div>
      </div>
    </div>
    <div class="col-md-1">
      <%= link_to "Edit", edit_wiki_path(@wiki.id), class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>
