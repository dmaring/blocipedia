<div class="container">
  <div class="row justify-content-sm-center d-flex">
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">
          <h3>edit</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <%= form_for @wiki do |f| %>
              <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
              <%= f.label :body %>
              <%= f.text_area :body, class: "form-control", rows: "10" %>
              </div>
              <div class="form-group">
                <%= f.check_box :private %>
                <%= f.label :private %>
              </div>
            <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card h-100">
        <div class="card-header">
          <h3>preview</h3>
        </div>

          <div class="card-body">
          <h4 class="card-title"><%= @wiki.title %></h4>
            <p><%= @wiki.body %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
